{
  "version": 2,
  "env": {
    "NEXT_PUBLIC_API_URL": "https://bip47-website-production.up.railway.app"
  },
  "regions": ["iad1"],
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://bip47-website-production.up.railway.app/api/:path*"
    }
  ]
}
